<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView
                android:text="Latitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:layout_margin="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblLatitud" android:layout_weight="1"
                android:text=" " android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView
                android:text="Longitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblLongitud" android:layout_weight="1"
                android:text=" " android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView
                android:text="Altitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="3dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblAltitud" android:layout_weight="1"
                android:layout_margin="3dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txtAdress" android:layout_weight="1" android:hint="Ingresa DirecciÃ³n"/>
        <Button
                android:text="Marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnMarca"
                android:textAlignment="center" android:lineSpacingExtra="10sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/lyMapa">

        <fragment android:id="@+id/frgMapa"
                  android:name="com.google.android.gms.maps.SupportMapFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
        />

    </LinearLayout>
</LinearLayout>